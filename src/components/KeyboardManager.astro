}

const profileInfo = profiles.map(({network, url}) => {
    const icon = SOCIAL_ICONS[network]

const firstLetter = network.charAt(0).toUpperCase();

    return {
        id: network,
        section: 'Social',
        title: `visitar ${network}`,
        icon,
        hotkey: `control + ${firstLetter}`,
        url,
        handler: () => {window.open(url , '_blank')}

    }
})

---

<footer id="normal-footer">Pulsa <kbd>Ctrl</kbd> + <kbd>K</kbd> para el comando de opciones</footer>

<ninja-keys data-info={JSON.stringify(profileInfo)}   placeholder="Buscar comando..." hideBreadcrumbs> 
</ninja-keys>
<script>
import 'ninja-keys';

const ninja = document.querySelector('ninja-keys');


if (ninja != null) {
const info = ninja.getAttribute('data-info') ?? '[';
const parsedInfo = JSON.parse(info);
const data = parsedInfo.map((item: any) => {
  return{
    ...item,
    handler: () => {
      window.open(item.url, '_blank')
    }
  }
})
ninja.data = [
    {
      id: 'print',
      title: 'ðŸ–¨ï¸ Imprimir',
      hotkey: 'ctrl+P',
      section: 'Acciones',
      handler: () => {
        window.print();
      },
    },
    ...data,
  ]
}
</script>
<style>
    @media print {
        ninja-keys {
            display: none !important;
        }

        footer {
          display: none !important;
        }
    }

    @media (max-width: 700px) {
       #normal-footer {
        display: none !important;
       }
      }
    @keyframes fadeIn{
      from {opacity: 0;}
      to   {opacity: 1;}
    }

    footer {
        background: #fdfdfd;
        position: fixed;
        bottom: 0;
        border-top: 1px solid #eee;
        width: 100%;
        text-align: center;
        padding-block: 0.5em;
        font-size: 0.8em;

        view-timeline-name: --revealing;
        view-timeline-axis: block;

        animation: linear 0.3s fadeIn;
        animation-timeline: --revealing;
        animation-range: entry 100% cover 10%;
    }

    kbd {
        background-color: #eee;
        border-radius: 4px;
        padding: 0.2em 0.4em;
        font-size: 12px;
    }
</style>