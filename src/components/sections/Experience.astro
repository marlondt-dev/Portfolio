---
import Section from "../Section.astro";
import type {CV} from '@/types/cv'
import {getI18N } from '@/i18n/utils'

interface Props {
  cv: CV,
  locale?: string
}

const { cv, locale = 'es' }: Props = Astro.props;
const { work } = cv;
const i18n = getI18N(locale)

---

<Section title={i18n.sections.experience}>
  <ul>
    {
      work.map(
        ({ name, position, startDate, endDate, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";
          const years = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3><a href={url} title={`Ver ${name}`} target="_blank">{name}</a></h3>
                    <h4>{position}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 1.5em;
        margin-top: 0.5em;
    }

    article h3 {
        color: #111;
        font-weight: 500;
    }

    article h4 {
        color: #111;
        font-weight: 450;
    }

    article a {
    color: #111;
  }


    article a:hover {
    text-decoration: underline;
  }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

     time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor:default;
  }

  footer p {
    margin: 0;
  }
    
</style>
