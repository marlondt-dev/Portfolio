---
import Section from "../Section.astro"
import type { CV } from "@/types/cv";
import {getI18N } from '@/i18n/utils'

interface Props {
    cv: CV,
    locale?: string
}

const {cv, locale = 'es'}: Props = Astro.props
const {education} = cv;
const i18n = getI18N (locale)
---

<Section title={i18n.sections.education}>
   <ul>
    {
        education.map(({institution, area, startDate, endDate}) =>{
            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actual'
            const years = `${startYear} - ${endYear}`
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{institution}</h3>
                                <p>{area}</p>
                            </div>
                            <time>{years}</time>
                        </header>
                    </article>
                </li>

            )
        } )
    }
   </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 1.5em;
        margin-top: 0.5em;
    }

    article h3 {
        color: #111;
        font-weight: 500;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    article a {
    color: #111;
  }


    article a:hover {
    text-decoration: underline;
  }

  header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    
     time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor:default;
  }


   
</style>
