---
import LanguageSelector from "@/components/LanguageSelector.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <LanguageSelector />
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: 0.025em;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    margin: 0;
  }

  p {
    color: #666;
    font-size: 0.85rem;
    line-height: 1.5;
    text-wrap: pretty;
  }

  time {
    font-size: 0.6rem;
    color: #555;
  }
  @media print {
    * {
      -webkit-print-color-adjust: exact !important;
      color-adjust: exact !important;
    }

    @page {
      margin: 0.5cm;
      size: A4;
    }

    body {
      background: white !important;
      color: black !important;
      font-size: 12pt;
      line-height: 1.4;
    }

    main {
      padding: 0 !important;
      margin: 0 !important;
      max-width: none !important;
    }

    .no-print,
    .language-selector,
    .print-button {
      display: none !important;
    }

    section {
      break-inside: avoid;
      page-break-inside: avoid;
    }

    h1,
    h2,
    h3 {
      page-break-after: avoid;
    }

    p {
      color: #333 !important;
    }

    time {
      color: #666 !important;
    }
  }
</style>
